@model ContatoModel

@{
    ViewData["Title"] = "Confirmação de Apagar Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome) ?</h3>
</div>
<br />

<div class="d-grid gap-2">
    <a class="btn btn-success" role="button" asp.controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar Exclusão</a>
    <a class="btn btn-danger" role="button" asp.controller="Contato" asp-action="Index">Cancelar Exclusão</a>
</div>